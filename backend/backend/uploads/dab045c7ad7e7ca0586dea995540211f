    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const commentCells = document.querySelectorAll(".col-comments");
        let maxHeight = 0;

        commentCells.forEach((cell) => {
          const height = cell.offsetHeight;
          if (height > maxHeight) {
            maxHeight = height;
          }
        });

        commentCells.forEach((cell) => {
          cell.style.height = `${maxHeight}px`;
        });
      });
    </script>
